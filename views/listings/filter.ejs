<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="new-head m-3">Filter Applied : <%= filter %></h1>
    <div class="box">
        <% for(listing of listings){ %>
            <a href="http://localhost:3000/listings/<%= listing.id %>">
                <div class="card  ">
                    <img src="<%= listing.image.path %>" class="card-img-top" alt="wait for sec">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <p class="card-text">
                    <b><%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                        <i class="tax-info">&nbsp;+18%GST</i>
                    </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    <a class="btn btn-dark btn-lg add-btn mt-5 " href="http://localhost:3000/listings">Back</a>
</body>