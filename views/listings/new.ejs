<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="new-head mt-3">Enter the new Listing</h1>
    <div class="row offset-2">
        <div class="col-8">
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text", name="title" placeholder="enter title" id="title" class="form-control" required>
                    <div class="valid-feedback">Nicely Done!!</div>
                    <div class="invalid-feedback">Please Enter A Valid Title!!</div>
                </div>   
                <div class="mb-3">
                    <label for="description"  class="form-label">Description</label>
                    <textarea name="description" placeholder="enter description" id="description" class="form-control" rows="3" required></textarea>
                    <div class="valid-feedback">Nicely Done!!</div>
                    <div class="invalid-feedback">Please Enter A Valid Description!!</div>
                </div>
                <div class="mb-3">
                    <label for="image" >Upload Image</label>
                    <input type="file", name="image" id="image" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4 col-sm-12">
                        <label for="price" class="form-label">Price</label>
                        <input type="number", name="price" placeholder=" enter price" id="price"  class="form-control" required>
                        <div class="valid-feedback">Nicely Done!!</div>
                        <div class="invalid-feedback">Please Enter A Valid Price!!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text", name="location" placeholder="enter location" id="location"  class="form-control" required>
                        <div class="valid-feedback">Nicely Done!!</div>
                        <div class="invalid-feedback">Please Enter A Valid Location!!</div>
                    </div>
                </div >
                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text", name="country" placeholder="enter country" id="country"  class="form-control" required>
                        <div class="valid-feedback">Nicely Done!!</div>
                        <div class="invalid-feedback">Please Enter A Valid Country!!</div>
                    </div>
                    <div class="mb-3 col-md-4 col-sm-12">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" aria-label="Default select example" id="category" name="filter">
                            <option selected>Choose Category</option>
                            <option value="mansions">Mansions</option>
                            <option value="beach">Beach</option>
                            <option value="boats">Boats</option>
                            <option value="mountains">Mountains</option>
                            <option value="forest">Forest</option>
                            <option value="winters">Winters</option>
                            <option value="rainy">Rainy</option>
                            <option value="apartment">Apartment</option>
                            <option value="restaurant">Restaurant</option>
                          </select>
                        <div class="valid-feedback">Nicely Done!!</div>
                        <div class="invalid-feedback">Please Enter A Valid Title!!</div>
                    </div>
                </div>   
                <button class="btn btn-dark btn-lg add-btn mt-3">Add listing</button>
            </form>
            <br><br>
        </div>
    </div>

</body>
